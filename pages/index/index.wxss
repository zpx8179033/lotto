/**index.wxss**/
.head-title {
  line-height: 40px;
  width:100%;
  height:40px;
}
.li {
  position: relative;
  background:#f5f5f5;
  width:100%;
  height:120px;
  margin: 10px 0;
}
.li .top-half{
  position: relative;
  width:100%;
  height:80px;
}
.li .top-half image{
  height:80px;
  width:80px;
}
.li .top-half .name{
  position:absolute;
  top:10px;
  left:100px;
}
.li .top-half .price{
  position:absolute;
  bottom:10px;
  left:100px;
}
.li .bottom-half{
  background: #5f5f5f;
  width:100%;
  height: 40px;
  line-height: 40px;
}