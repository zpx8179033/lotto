/**index.wxss**/
.head {
  display: flex;
  justify-content:space-around;
  line-height: 40px;
  width:100%;
  height:40px;
}
.head .head-item{
  position: relative;
  text-align: center;
  margin: 0px 20px;
  height: 40px;
  width: 33%;
}
.head .head-item .mark{
  position: absolute;
  background-color:#1D75DD;
  height:5px;
  width: 100%;
  border-radius: 2.5px;
}
.content{
  position: absolute;
  top:40px;
  bottom: 0;
  height:auto;
  width: 100%;
  overflow: auto;
}
.content .item{
  height: 100%;
  width: 100%;
}
.li {
  position: relative;
  background:#f5f5f5;
  width:100%;
  height:120px;
  margin: 10px 0;
}
.li .top-half{
  position: relative;
  width:100%;
  height:80px;
}
.li .top-half image{
  height:80px;
  width:80px;
}
.li .top-half .name{
  position:absolute;
  top:10px;
  left:100px;
}
.li .top-half .price{
  position:absolute;
  bottom:10px;
  left:100px;
}
.li .bottom-half{
  background: #5f5f5f;
  width:100%;
  height: 40px;
  line-height: 40px;
}