/* createProject.wxss */
.header{
  position: relative;
  height: 40px;
  width: 100%;
  line-height: 40px;
  font-weight: bold;
  text-align: center;
}
.content{
  position: absolute;
  width: 100%;
  top:40px;
  bottom: 0;
  height:auto;
  background-color: #F0F0F0;
}
.content .item{
  display: flex;
  justify-content: space-around;
  height:50px;
  width:90%;
  line-height: 50px;
  background-color: #FFFFFF;
  margin: 10px 5%;
  border-radius: 25px; 
}
.content .item image{
  width: 30px;
  height:30px;
  margin: 10px;
}
.content .item .middle{
  width: 40%;
  height:100%;
  font-size: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.content .item .right{
  width: 20%;
  height:100%;
  font-size: 12px;
  color:#B2B2B2;
}
.content .item .selected-right{
  width: 20%;
  height:100%;
  font-size: 12px;
  color:#07A706;
}
.content .item .divide-line{
  height:100%;
  width: 2px;
  background-color:#F0F0F0;
}
.content .bottom{
  position: absolute;
  bottom: 20px;
  width: 80%;
  margin: 10%;
  height:40px;
  border-radius: 30px;
  text-align: center;
  line-height: 40px;
  color:#FFFFFF;
  background-color:#1E75DD;
}
.default-info {
  margin:10px 0 0 0; 
}
.default-info .item-info{
  position: relative;
  width: 100%;
  height:40px;
  background:#FFFFFF;
  margin:0 0 2px 0;
  line-height: 40px;
}
.default-info .item-info .left{
  position: absolute;
  left:10px;
}
.default-info .item-info .right{
  position: absolute;
  right:10px;
}
.default-info .item-info .right .text{
  float: left;
  height:40px;
}
.default-info .item-info .right input{
  float: left;
  height:40px;
  width: 50px;
}
.true-alert{
  color:red;
}
.false-alert{
  color:black;
}
.btn-base{
  position: absolute;
  bottom:20px;
  color:white;
  width: 80%;
  height:40px;
  line-height: 40px;
  border-radius: 20px;
  text-align: center;
  margin-left: 10%;
}
.true-btn{
  background-color:#07A706;
}
.false-btn{
  background-color:#9AD69A;
}